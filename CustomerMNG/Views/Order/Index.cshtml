@model IEnumerable<CustomerMNG.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>List Order</h1>
    <hr />
    <p>
        <a asp-action="Create">Create Order</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductOrders)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @foreach (var x in item.ProductOrders)
                    {
                        @Html.DisplayFor(b=> x.Product.Name)<span>,</span>
                     }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="View" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="ListOrderByCustomer" asp-route-id="@item.Id">View Orders</a> |
                    <a @*asp-action="Delete" asp-route-id="@item.Id"*@ href="" customer-id="@item.Id" data-target="#myModal" data-toggle="modal" id="deleteButton" data-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@model CustomerMNG.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Order</h1>


<form asp-controller="Order" asp-action="SaveNew">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NumberOfOrder"></label>
        <input asp-for="NumberOfOrder" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" class="form-control">
    </div>
    <div class="form-group">
        <label>Category: </label>
        <select asp-for="ProductIds" asp-items="Model.ProductSelections" multiple>
            <option> Select Product</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
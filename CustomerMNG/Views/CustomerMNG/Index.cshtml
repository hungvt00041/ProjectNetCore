
@model IEnumerable<CustomerMNG.Models.Customer>

@{
    ViewData["Title"] = "CustomerMNG";
}

<h1>Hello Screen</h1>

<h1>ex1 @Html.DisplayNameFor(model => model.Name)</h1>
 
<p>
    @foreach (var item in Model)
    {
        
        <h1>ex2 @Html.DisplayFor(modelItem => item.Name)</h1>
    }
    @foreach (var item in Model)
    {
        <div>
            I am @item.Name - I am @item.Age
            <a asp-controller="CustomerMNG" asp-action="Detail" asp-route-name=@item.Name asp-route-age=@item.Age>Click Here</a>
        </div>
    }

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Name)</th>
            <th> @Html.DisplayNameFor(model => model.Age)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
            </tr>
        }
    </tbody>
</table>







</p>

